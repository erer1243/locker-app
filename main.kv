#: import SlideTransition kivy.uix.screenmanager.SlideTransition
ScreenDisplayController:
    transition:
    MainMenu:
    OtherMenu:

<MainMenu>:
    name: "mainmenu"
    Button:
        text: "Example Button"
        font_size: 50
        on_release:
            app.root.transition = SlideTransition(direction='left')
            app.root.current = "othermenu"

<OtherMenu>:
    name: "othermenu"
    Button:
        text: "Example Button 2"
        font_size: 40
        on_release:
            app.root.transition = SlideTransition(direction='right')
            app.root.current = "mainmenu"
