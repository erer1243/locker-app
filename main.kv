#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import textwrap textwrap
ScreenDisplayController:
    id: controller
    Screen:
        name: "name_entry"
        GridLayout:
            id: name_entry_grid
            rows: 4
            cols: 1
            Label:
                id: header
                size_hint_y: 0.5
                font_size: 70
                text: "Enter Locker Bluetooth ID"
            TextInput:
                id: idbox
                text: "Locker0"
                multiline: False
                font_size: 150
                padding_x: [self.center[0] - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached) / 2.0,0] if self.text else [self.center[0], 0]
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            GridLayout:
                rows: 1
                cols: 2
                size_hint_y: 0.4
                Button:
                    text: "R"
                    font_size: 200
                    size_hint_x: 0.2
                    on_release: app.getBluetoothInfo()
                Button:
                    text: "Continue"
                    font_size: 100
                    size_hint_x: 0.8
                    on_release: root.bluetoothBasedDisplayManager()
            Label:
                size_hint_y: 1
                font_size: 60
                text: '\n'.join(textwrap.wrap("You must be paired with the locker before starting the app. Go to settings and do so if you are not paired already. \nPress R button to refresh paired list.", 40))
    Screen:
        name: "makingBTconnection"
        GridLayout:
            id: connection_progress_grid
            rows: 2
            cols: 1
            Label:
                color: 0, 0.6, 1, 1
                font_size: 100
                size_hint_y: .1
                text: "Connecting to Locker"
            Label:
                id: connection_progress_log
                text: ""
                font_size: 80
    Screen:
        name: "scr2"
        Button:
            font_size: 50
            text: "goodbye"
            on_release:
                app.root.transition = SlideTransition(direction="right")
                app.root.current = "scr1"
